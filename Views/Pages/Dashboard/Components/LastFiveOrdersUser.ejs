<div
  class="chart_and_information w-full h-max mb-[20px] mt-5 flex flex-col md:flex-row gap-2"
>
  <!-- last five orders -->
  <% if(lastOrders.length <= 0) {%>
  <div
    class="w-full md:w-1/2 overflow-auto shadow-md flex items-center justify-center flex-col border border-slate-100 relative"
  >
    <small
      class="flex items-center gap-1 absolute left-2 top-2 before:contents[''] before:h-[10px] before:w-[3px] before:bg-slate-700 before:block"
      >Last five orders List</small
    >
    <img src="/Assets/noData.png" alt="no data image" class="w-[500px]" />
    <h1 class="text-[12px] text-slate-500 text-center mb-10">
      There is no orders now
    </h1>
  </div>
  <% }else{ %>

  <div class="w-full md:w-1/2 overflow-auto shadow-md relative py-5">
    <small
      class="flex items-center gap-1 before:contents[''] before:h-[10px] before:w-[3px] before:bg-slate-700 before:block py-2"
      >Last five orders List</small
    >
    <a
      href="/Orders"
      class="text-[12px] text-slate-500 font-medium hover:text-slate-800 hover:underline absolute bottom-0 left-2 z-10 mt-5"
    >
      See More</a
    >
    <table id="allData" class="w-full p-3">
      <thead class="bg-slate-100 text-slate-600 font-medium">
        <tr>
          <td class="p-2 px-2 text-[13px]">Image</td>
          <td class="p-2 px-2 text-[13px]">ID</td>
          <td class="p-2 px-2 text-[13px]">Product name</td>
          <td class="p-2 px-2 text-[13px]">Ordered_user</td>
          <td class="p-2 px-2 text-[13px]">Price</td>
        </tr>
      </thead>
      <tbody class="">
        <% lastOrders.forEach(c => { %>
        <tr class="border-b border-slate-200 hover:bg-slate-100">
          <td class="py-0 px-2 text-[14px]"><%= c.id %></td>
          <td class="py-0 px-2 text-[14px]">
            <img
              src="<%= c.cover_Image %>  %>"
              alt="icon-image"
              class="w-[20px] h-[20px] border border-gray-300 shadow"
            />
          </td>
          <td class="py-0 px-2 text-[14px]"><%= c.Product_name %></td>
          <td class="py-0 px-2 text-[14px]"><%= c.catergory_name %></td>
          <td class="py-0 px-2 text-[14px]"><%= c.type_name %></td>
          <td class="py-0 px-2 text-[14px]">$<%= c.price %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <% } %>
</div>
