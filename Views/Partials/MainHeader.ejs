<header class="bg-white shadow p-3 sticky top-0">
  <nav class="w-[98%] m-auto flex justify-between">
    <!-- left section -->
    <div class="left flex items-center gap-2">
      <ion-icon
        id="Desktop_menuBtn"
        name="menu-outline"
        class="text-[30px] cursor-pointer hover:bg-gray-200 p-1 transition-all ease-in duration-300 hidden md:block"
      ></ion-icon>
      <ion-icon
        id="MobilemenuBtn"
        name="menu-outline"
        class="text-[30px] cursor-pointer hover:bg-gray-200 p-1 transition-all ease-in duration-300 block md:hidden"
      ></ion-icon>
      <h1 class="text-[20px]">Admin Portal</h1>
    </div>
    <!-- right section -->
    <div class="right flex items-center gap-2">
      <!-- notification -->
      <div class="notification relative">
        <ion-icon name="notifications-outline" id="showNotification" class="text-[16px] cursor-pointer"></ion-icon>

        <div
          id="box_info" class="absolute right-0 w-max   bg-white drop-shadow-md rounded hidden"
        >
         <!-- user and order -->
         <div class="notification_body flex items-center gap-2 border-b border-gray-100 py-5 px-5 hover:bg-slate-50 cursor-pointer">
          <div
          class="profile w-[20px] bg-gray-100 h-[20px] rounded-full border-blue-500 border cursor-pointer"
        ></div>
        <h1 class="text-[12px]">Apiipakar : ordered iphone 14 pro max</h1>
         </div>     
        </div>
      </div>
      <!-- username -->
      <small class="capitalize hidden md:block"><%= User.username %></small>
      <div
        class="profile w-[30px] bg-gray-100 h-[30px] rounded-full border-blue-500 border cursor-pointer"
      ></div>
    </div>
  </nav>
</header>

<script>
  // initialize dom
  let aside_desktop = document.getElementById("aside_desktop");
  let Desktop_menuBtn = document.getElementById("Desktop_menuBtn");
  let showNotificationBTn = document.getElementById('showNotification')
  let notification = document.getElementById('box_info') 

  // show notification handle
  showNotificationBTn.addEventListener('click',()=>{
    notification.classList.contains('hidden')?notification.classList.remove('hidden'):notification.classList.add('hidden')
  })
 
  // show and hide menu
  Desktop_menuBtn.addEventListener("click", () => {
    aside_desktop.classList.contains("lg:block")
      ? aside_desktop.classList.replace("lg:block", "lg:hidden")
      : aside_desktop.classList.replace("lg:hidden", "lg:block");
  });
</script>
