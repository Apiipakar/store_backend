<div
  id="deleteAlert"
  class="w-full h-screen hidden flex-col z-10 absolute items-center justify-center ease-in duration-150"
>
  <div
    class="w-11/12 sm:w-1/3 lg:w-1/3 delete_message bg-white text-center p-5 rounded shadow-md border border-gray-200 text-black"
  >
    <div
      class="title_and_cancellBtn_delete_alert w-full flex justify-between border-b border-gray-100"
    >
      <h1 class="font-medium">Confirm to Delete</h1>
      <ion-icon
        name="close-outline"
        id="close_delete_alert"
        class="cursor-pointer text-[18px] p-3 hover:bg-slate-100 hover:rounded-full ease-in duration-150"
      ></ion-icon>
    </div>
    <h1 id="deleteText" class="my-5 text-[14px] text-gray-700"></h1>
    <div class="confirm_buttons w-1/2 lg:w-1/3 m-auto flex justify-around">
      <a
        href="#"
        id="YesBtn"
        class="px-5 py-1 border text-black rounded-[3px] hover:bg-slate-800 hover:text-white cursor-pointer ease-in duration-150"
        >Yes</a
      >
      <a
        href="#"
        id="CancellBtn"
        class="px-5 py-1 border border-slate-300 hover:bg-red-800 hover:text-white rounded-[3px] cursor-pointer ease-in duration-150"
        >No</a
      >
    </div>
  </div>
</div>

<script>
  document
    .getElementById("close_delete_alert")
    .addEventListener("click", () => {
      document.getElementById("deleteAlert").classList.remove("flex");
      document.getElementById("deleteAlert").classList.add("hidden");
    });

  document.getElementById("CancellBtn").addEventListener("click", () => {
    document.getElementById("deleteAlert").classList.remove("flex");
    document.getElementById("deleteAlert").classList.add("hidden");
  });
</script>
